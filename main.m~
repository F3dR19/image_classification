k = 10; j = 4;
method = 1;
size_train = 100;
size_test = 100;

[ images_train, images_test, labels_train, labels_test ] = read_data(size_train,size_test);

[ images_train, images_test ] = edit_data(images_train,images_test);

[ features_train, features_test ] = compute_features(images_train, images_test, method, k, j);

[ neighbours, d ] = knnsearch(features_train', features_test','K',k,...
    'NSMethod','exhaustive','Distance','euclidean');

classifications = zeros(1,size_test);
for n = 1:size_test
    classifications(n) = mode(labels_train(neighbours(n,:)),2);
end

performance = sum(labels_test==classifications